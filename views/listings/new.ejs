<% layout('/layouts/boilerplate') -%>

<div class="row">
  <div class="col-8 offset-2">
    <h3>Create a New Listings</h3>
    <br />
    <form method="POST" action="/listings">
      <div class="mb-3">
        <label for="title" class="from-label">Title</label>
        <input
          name="listing[title]"
          placeholder="Add a Catchy title"
          type="text"
          class="form-control"
        />
      </div>

      <div class="mb-3">
        <label for="description" class="from-label">Description</label>
        <textarea name="listing[description]" class="form-control"></textarea>
      </div>

      <div class="mb-3">
        <label for="image" class="from-label">Image</label>
        <input
          name="listing[image]"
          type="text"
          placeholder="Enter image/Link"
          class="form-control"
        />
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="from-label">Price</label>
          <input
            name="listing[price]"
            type="number"
            placeholder="1500"
            class="form-control"
          />
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="from-label">country</label>
          <input
            name="listing[country]"
            placeholder="country"
            class="form-control"
          />
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="from-label">location</label>
        <input
          name="listing[location]"
          type="text"
          placeholder="jaipur Rajasthan"
          class="form-control"
        />
      </div>

      <br /><br />
      <button class="btn btn-dark add-btn">Add</button>
      <br /><br />
    </form>
  </div>
</div>
